// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  img String[]
  price String
  category String
  type String
}




model Order {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  user Json
  info Json
  createdAt String
}


 